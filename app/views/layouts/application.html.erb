<!DOCTYPE html>

<html>
  <head>
    <title>ViewingPartyLite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= link_to "Home", root_path %>
    <br>
    <br>
    <header>Movie Viewing Party</header>
    <br/>
    <% flash.each do |type, msg| %>
      <div class='flash_red'>
        <%= msg %>
      </div>
      <br>
    <% end %>
    <%= yield %>
  </body>
</html>
