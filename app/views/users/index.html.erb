<% if !current_user %>
<div id='login'>
  <%= render partial: 'login_form', locals: {path: login_path} %>
</div>

<br>

<div id='button'>
  <%= button_to 'Create a New User', register_path, method: :get %>
</div>
<% end %>

<br>

<h2>Existing Users:</h2>

<br>

<div id='user-info'>
  <% @users.each do |user| %>
    <div id="user-<%= user.id %>">
      <p>
        <%= link_to "#{user.email}'s Dashboard", user_path(user) %>
      </p>
    </div>
  <% end %>
</div>
