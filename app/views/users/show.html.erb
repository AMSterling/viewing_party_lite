<h2><%= @user.name %>'s Dashboard</h2>

<br>

<div id='button'>
  <%= button_to 'Discover Movies', "/users/#{@user.id}/discover", method: :get %>
</div>

<br>

<hr>

<br>

<h2>Viewing Parties</h2>
<br>
  <section id='party'>
    <% @user.hosted_parties.each_with_index do |party, index| %>
      <div id='vp-column-<%= index %>'>
        <%= render partial: "party_info", locals: {party: party} %>
        <p>Hosting</p>
      </div>
    <% end %>
  </section>

  <section id='party'>
    <% @user.invited_parties.each_with_index do |party, index| %>
    <div id='vp-column-<%= index %>'>
        <%= render partial: "party_info", locals: {party: party} %>
        <p>Invited</p>
      </div>
    <% end %>
  </section>
