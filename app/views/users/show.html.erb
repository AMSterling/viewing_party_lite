<h2><%= @user.name %>'s Dashboard</h2>

<br>

<div id='button'>
  <%= button_to "Discover Movies", "/users/#{@user.id}/discover", method: :get %>
</div>

<br>

<hr>

<br>

<h2>Viewing Parties</h2>
  <div>
    <% @user.hosted_parties.each do |party| %>
      <%= render partial: "party_info", locals: {party: party} %>
      <p>Hosting</p>
    <% end %>
  </div>

  <div>
    <% @user.invited_parties.each do |party| %>
      <%= render partial: "party_info", locals: {party: party} %>
      <p>Invited</p>
    <% end %>
  </div>
